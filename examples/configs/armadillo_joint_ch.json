{
    "cached_scene_path": "cached_scenes/armadillo.pt",
    "target_images_path": "target_images/armadillo",
    "result_path": "results/armadillo_joint_ch",

    "image_res": [512, 512],
    "batch_size": 1,
    "vis_sensor_ids": [36, 31, 60, 74],

    "num_epochs": 10,
    "checkpoint_iter": 50,

    "models": [
        {
            "model_name": "LargeStepsShapeOpt",
            "args": {
                "mesh_id": 0,
                "init_mesh_path": "data/meshes/armadillo_smooth.obj",
                "result_name": "mesh",
                "optimizer_kwargs": {
                    "lr": 5e-3, 
                    "lmbda": 100
                }
            }
        },
        {
            "model_name": "ConvexHullTextureOpt",
            "args": {
                "bsdf_id": 0,
                "N": 10,
                "t_size": 512,
                "t_kwargs": {
                    "d": {
                        "name": "diffuse"
                    },
                    "s": {
                        "name": "specular",
                        "v_max": 0.08 
                    },
                    "r": {
                        "name": "roughness",
                        "v_min": 0.1
                    }
                },
                "optimizer_kwargs": {
                    "lr": 1e-1 
                }
            }
        }
    ],
    
    "connector_name": "psdr_cuda",

    "integrator": {
        "type": "collocated",
        "config": {
            "intensity": 15
        }
    },

    "render_options": {
        "tar": {
            "spp": 64,
            "sppe": 0,
            "sppse": 0,
            "npass": 4,
            "log_level": 0
        },
        "opt": {
            "spp": 16,
            "sppe": 4,
            "sppse": 0,
            "npass": 1,
            "log_level": 0
        },
        "vis": {
            "spp": 64,
            "sppe": 0,
            "sppse": 0,
            "npass": 4,
            "log_level": 0
        }
    }
}